

<div class="item-list">
	<h3> Search Results </h3>
	{{#if pagingInfo}} 
		<span class="count"> Page: {{pagingInfo.pageNum}} Showing Results: {{pagingInfo.startIndex}} to {{pagingInfo.endIndex}} &nbsp;  of  &nbsp; {{pagingInfo.numResults}} </span>
	{{/if}}

	{{#if hasBlock}}
	
	  {{#each items as |item|}}
	    {{yield item}}
	  {{/each}}
	
	{{else}}

	  {{#each items as |item|}}
	    <section class="item">
	      <span class="title">
	      	{{item.title}}
	      </span>
	      <p>{{item.description}}</p>
	    </section>
	  {{/each}}

	{{/if}}


</div>