

<div class="item-list">
	<h3> Results </h3>
	{{#if pagingInfo}} 
		{{paging-component pagingInfo=pagingInfo 
			nextPage=pagingInfo.nextPage 
			prevPage=pagingInfo.prevPage
		}}
	{{/if}}	

	{{#if hasBlock}}
	
	  {{#each items as |item|}}
	    {{yield item}}
	  {{/each}}
	
	{{else}}

	  {{#each items as |item|}}
	    <section class="item">
	      <span class="title">
	      	{{item.title}}
	      </span>
	      <p>{{item.description}}</p>
	    </section>
	  {{/each}}

	{{/if}}
</div>