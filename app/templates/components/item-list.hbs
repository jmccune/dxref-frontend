

<div class="item-list-block">
	<div class="item-list-header">
		<h3> Results </h3>
		{{#if pagingInfo}} 
			{{paging-component pagingInfo=pagingInfo 
				nextPage=pagingInfo.nextPage 
				prevPage=pagingInfo.prevPage
			}}
		{{/if}}	
	</div>

	<div class="item-list">
		{{#if hasBlock}}

		  {{#each items as |item|}}
		    {{yield item}}
		  {{/each}}

		{{else}}

		  {{#each items as |item|}}
		    <section class="item">
		      <span class="title">
		      	{{#if item.link}} 
		      		{{#link-to item.link item.id}} 
		      			{{item.title}} 
		      		{{/link-to}}
		      	{{else}} 
		      		{{item.title}}
		      	{{/if}}
		      </span>
		      <p>{{item.description}}</p>
		    </section>
		  {{/each}}

		{{/if}}
	</div>
</div>