<hr class="editor-hr">
 <button  class="hr-button" {{action 'toggle'}}>
 	{{#if isExpanded}} - {{else}} + {{/if}}
 </button>

<div class="editing-panel {{if isExpanded "" "hidden"}}">

	<div class="edit-context">
		<span> Author:  </span>  <br>
		<span> Created: </span>  <br>
		<span> Updated: </span>  <br>
		<span> Tags: </span> <br> 
	</div>


	<div class="my-toolbar">
			  <a data-wysihtml5-command="bold">bold</a>
			  <a data-wysihtml5-command="italic">italic</a>
			  <a data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h1">H1</a>
			  <a data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="p">P</a>
			</div>

	<!-- element to edit -->
	<div class="outer-editor-box">
	<div class="my-editor" data-placeholder="Go on, start editing...">
	</div>
	</div>
	<hr class="editor-hr">
</div>	
