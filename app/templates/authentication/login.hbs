<div class="centered">
	<h4>Please login</h4>

	  Or if you don't have an account>>
	  {{#link-to 'authentication.create-user'}}
	   Create User 
	   {{/link-to}}	  
	<br>
	<br>

	{{#if message}}
		{{#if isError}}
	  		<div class="alert alert-danger">{{{message}}}</div>
		{{else}}
			<div class="alert alert-success">{{{message}}}</div>
		{{/if}}
	{{/if}}

	<p>
	  <small>
	    To login as a user, use <code>dev</code> / <code>password</code>;<br>	    
	  </small>
	</p>

	<p>Username: {{input name="username" value=username}}</p>
	<p>Password: {{input name="password" value=password 	type="password"}}</p>

	<p>
	  <button {{action "login"}}>Submit</button>
	  <button {{action "cancel"}}>Cancel</button>
	</p>
</div>